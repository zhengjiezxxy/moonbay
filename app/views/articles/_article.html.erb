    <div class="panel panel-default">
        <div class="panel-heading">
          <h4 class="panel-title">
            <%= link_to article.title,"#collapse#{index}",'data-toggle'=>"collapse", 'data-parent'=>"#accordion" %>
          </h4>
        </div>
      <% if index == 0 || index == 1%>
        <%= tag :div ,{:id=>"collapse#{index}", :class=>"panel-collapse collapse in"} %>
      <% else %>
        <%= tag :div ,{:id=>"collapse#{index}", :class=>"panel-collapse collapse"} %>
      <% end %>
          <div class="panel-body">
            <p display="inline">
            作者：<%= article.arthor %>
            星级：<%= article.rate %>
            </p>

            <% if article.body.nil? %>
              <%= article.body %>
            <% else %>
              <%= simple_format(article.body[0,299]) %>
            <% end %>

            <%=link_to "......",article_path(article) %>
            <%# if can? :update, @articles %>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_article_path(article), :class => 'btn btn-mini' %>
            <%# end %>

            <%# if can? :destory, @articles %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        article_path(article),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-mini btn-danger' %>
            <%# end %>
          </div>
        </div>
      </div>
