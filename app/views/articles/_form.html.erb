<div class="col-md-9">
<%= form_for @article, :html => { :class => 'form-horizontal',role:'form' } do |f| %>
  <div class="form-group">
    <%= f.label :title  %>
      <%= f.text_field :title, :class => 'form_control' %>
  </div>
  <div class="form-group">
    <%= f.label :arthor %>
      <%= f.text_field :arthor, :class => 'form_control' %>
  </div>

  <div class="form-group">
    <%= f.label :body %>
    <%= f.bootsy_area :body, id: 'bootsy-textarea',:class => 'field col-sm-9',rows:30 %>
  </div>

  <div class="form-group">
    <%= f.label :rate %>
      <%= f.text_field :rate, :class => 'form_control' %>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                articles_path, :class => 'btn' %>
  </div>
<% end %>
</div>
<script src="assets/javascripts/locales/bootstrap-wysihtml5.zh-CN.js"></script>
<script type="text/javascript">
  $('textarea.bootsy_text_area').wysihtml5({locale: "zh-CN"});
  </script>
