<div class="">
<%= form_for @article, :html => { :class=> "form-horizontal", role:'form' } do |f| %>

  <div class="form-group">
    <%= f.label :title, :class=> "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= f.text_field :title, type: "text", :class => 'form-control',placeholder: "please input title" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :arthor, :class=> "col-sm-2 control-label" %>
  <div class="col-sm-4">
      <%= f.text_field :arthor, :class => 'form-control' %>
  </div>

    <%= f.label :rate, :class=> "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :rate, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%# f.label :body %>
    <%= f.bootsy_area :body, id: 'bootsy-textarea',:class => 'field col-sm-8  form-control',rows:30 %>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                articles_path, :class => 'btn' %>
  </div>
<% end %>
</div>
